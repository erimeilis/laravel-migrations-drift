{
    "name": "erimeilis/laravel-migrations-drift",
    "description": "Detect and fix migration table drift in Laravel apps. Sync filenames, compare schemas, rename migrations.",
    "keywords": ["laravel", "migrations", "drift", "sync", "schema"],
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Eri Meilis"
        }
    ],
    "require": {
        "php": "^8.2",
        "illuminate/console": "^11.0|^12.0",
        "illuminate/database": "^11.0|^12.0",
        "illuminate/filesystem": "^11.0|^12.0",
        "illuminate/support": "^11.0|^12.0"
    },
    "require-dev": {
        "orchestra/testbench": "^9.0|^10.0",
        "phpunit/phpunit": "^11.0"
    },
    "autoload": {
        "psr-4": {
            "EriMeilis\\MigrationDrift\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "EriMeilis\\MigrationDrift\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "EriMeilis\\MigrationDrift\\MigrationDriftServiceProvider"
            ]
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
